{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "outDir": "./dist",                              
    "rootDir": "./",                        
    "strict": false,                             
    "baseUrl": "./src",                             
     "paths": {
       "@modules/*": [
         "modules/*"
       ],
       "@config/*": [
         "config/*"
       ],
       "@shared/*": [
        "shared/*"
      ],
      "@errors/*": [
        "errors/*"
      ],
       
     },        
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "resolveJsonModule": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}
